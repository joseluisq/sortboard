{
  "name": "sortboard",
  "version": "2.0.0",
  "description": "Easy sorting and filtering of elements.",
  "repository": "joseluisq/sortboard",
  "license": "MIT",
  "main": "dist/sortboard.js",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "keywords": [
    "grid",
    "sort",
    "filter",
    "sortlist",
    "filterlist",
    "responsive"
  ],
  "engines": {
    "node": ">= 4.2"
  },
  "dependencies": {
    "emitus": "^2.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.46.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "jsdom": "^9.12.0",
    "nyc": "^10.2.0",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "tape": "^4.6.3",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server",
    "version": "npm run build",
    "build": "npm run js:min && npm run js:unmin",
    "js:min": "cross-env NODE_ENV=minified rollup -c",
    "js:unmin": "cross-env NODE_ENV=unminified rollup -c",
    "lint": "eslint src test",
    "test": "npm run lint && cross-env BABEL_ENV=test nyc npm run test:tape",
    "test:tape": "tape -r babel-register ./test/*.test.js",
    "coverage": "coveralls < ./coverage/lcov.info"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "nyc": {
    "include": [
      "src/index.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "checkCoverage": false,
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
