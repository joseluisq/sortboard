{
  "name": "sortboard",
  "version": "2.0.0",
  "description": "An small library for easy sorting and filtering of elements.",
  "repository": "joseluisq/sortboard",
  "license": "MIT",
  "main": "src/sortboard.js",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "files": [
    "index.js",
    "/*.js",
    "/*.map",
    "/*.d.ts",
    "README.md",
    "LICENSE.md"
  ],
  "keywords": [
    "grid",
    "sort",
    "filter",
    "sortlist",
    "filterlist",
    "responsive",
    "block"
  ],
  "engines": {
    "node": ">= 4.2"
  },
  "scripts": {
    "version": "npm run build",
    "build": "npm run test && npm run clean && npm run compile && npm run minify:browser",
    "compile": "npm run compile:es && npm run compile:browser && npm run compile:cjs",
    "compile:es": "tsc --outDir .cache --module es2015 --target es5",
    "compile:cjs": "tsc --outDir ./ --module commonjs --target es5",
    "compile:browser": "rollup -c && npm run minify:browser",
    "minify:browser": "uglifyjs ${npm_package_name}.umd.js -cm --source-map -o ${npm_package_name}.umd.min.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "npm run lint && karma start karma.config.js",
    "test:watch": "karma start",
    "lint": "tslint --format stylish --project tsconfig.json"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.7",
    "@types/node": "^10.0.3",
    "jasmine": "^3.0.0",
    "jasmine-core": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.2",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^3.0.12",
    "rollup": "^0.59.3",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "tslint": "^5.10.0",
    "tslint-config-standard-plus": "^1.0.0",
    "typescript": "^2.8.3",
    "uglify-js": "^3.3.23"
  },
  "dependencies": {
    "emitus": "^2.3.0"
  }
}
